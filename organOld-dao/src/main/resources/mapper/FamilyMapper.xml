<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.organOld.dao.repository.OldmanFamilyDao">



    <select id="getByPage" parameterType="com.organOld.dao.util.Page" resultType="com.organOld.dao.entity.oldman.Family">
        SELECT o.id,o.oldman_id,o.family_index,o.time,ob.name oldman_name
        FROM oldman_family o,oldman_base ob
        WHERE ob.id=o.oldman_id
    </select>

    <select id="getSizeByPage" parameterType="com.organOld.dao.util.Page" resultType="java.lang.Long">
        SELECT count(1)
        FROM oldman_family
        WHERE 1=1
        <if test="entity!=null and entity.id!=null and entity.id!=0">
            and id=#{entity.id}
        </if>

    </select>
    <update id="updateById" parameterType="com.organOld.dao.entity.oldman.Family">
        UPDATE oldman_family
        SET family_index=#{family_index},oldman_id=#{oldman_id},id=#{id},time=#{time}
        WHERE id=#{id}
    </update>
</mapper>
