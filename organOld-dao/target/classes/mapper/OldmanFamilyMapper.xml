<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.organOld.dao.repository.OldmanFamilyDao">

    <resultMap id="oldmanFamily" type="com.organOld.dao.entity.oldman.OldmanFamily">
        <id property="id" column="id" />
        <result property="family" column="family"/>
        <result property="time" column="time" />
        <association property="oldman" javaType="com.organOld.dao.entity.oldman.Oldman">
            <id property="id" column="oid" />
            <result property="name" column="name"/>
        </association>
    </resultMap>
    <select id="getByPage" parameterType="com.organOld.dao.util.Page" resultMap="oldmanFamily">
        SELECT ofa.id,ob.id oid,f.value family,ofa.time,ob.name
        FROM oldman_family ofa,oldman_base ob,auto_value f,organ org,auto_value x
        WHERE ob.id=ofa.oldman_id AND f.id=ofa.family_index AND x.id=ob.xq_id AND org.id=x.parent_index and ob.disable=0
        <if test="entity!=null and entity.organId!=null and entity.organId!=0">
            and org.id in (
            SELECT
            case o.parent
            when 0 then child.id
            else o.id
            end id
            from organ o left join organ child on child.parent=o.id
            WHERE o.id=#{entity.organId}
            )
        </if>
        <if test="entity!=null and entity.oldmanId!=null and entity.oldmanId!=0">
            and ob.id=#{entity.oldmanId}
        </if>
        <if test="entity!=null and entity.familyArray!=null and entity.familyArray.length > 0">
            and ofa.family_index IN
            <foreach collection="entity.familyArray" index="index" item="item" separator="," open="(" close=")">
                #{item}
            </foreach>
        </if>
        <if test="sortType!=null and sortType!=''">
            ORDER BY ob.${sortType}
        </if>
        <if test="sort!=null and sort!=''">
            ${sort}
        </if>
        <if test="length!=null and length!=0">
            limit #{start},#{length}
        </if>
    </select>

    <select id="getSizeByPage" parameterType="com.organOld.dao.util.Page" resultType="java.lang.Long">
        SELECT count(1)
        FROM oldman_family oldf,oldman_base ob,organ org,auto_value x
        WHERE oldf.oldman_id=ob.id AND x.id=ob.xq_id AND org.id=x.parent_index and ob.disable=0
        <if test="entity!=null and entity.organId!=null and entity.organId!=0">
            and org.id in (
            SELECT
            case o.parent
            when 0 then child.id
            else o.id
            end id
            from organ o left join organ child on child.parent=o.id
            WHERE o.id=#{entity.organId}
            )
        </if>
        <if test="entity!=null and entity.oldman!=null and entity.oldman.id!=null and entity.oldman.id!=0">
            and o.oldman_id=#{entity.oldman.id}
        </if>
    </select>

    <update id="updateById" parameterType="com.organOld.dao.entity.oldman.OldmanFamily">
        UPDATE oldman_family
        SET family_index=#{familyIndex}
        WHERE id=#{id}
    </update>


    <update id="updateByOldmanIds" parameterType="java.util.List">
        update oldman_family
        SET
        family_index= CASE oldman_id
        <foreach collection="list" index="index" item="item" open="" separator=" " close="">
            WHEN ${item.oldmanId} THEN #{item.familyIndex}
        </foreach>
        END
        where oldman_id in
        <foreach collection="list" index="index" item="item" separator="," open="(" close=")">
            #{item.oldmanId,jdbcType=BIGINT}
        </foreach>
    </update>


    <insert id="saveAll" parameterType="java.util.List">
        INSERT into oldman_family(oldman_id,family_index)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.oldmanId}, #{item.familyIndex})
        </foreach>
    </insert>

    <select id="getById" resultType="com.organOld.dao.entity.oldman.OldmanFamily">
        SELECT * from oldman_family where id=#{id}
    </select>
</mapper>
